    <title>Timetool - Auswertung</title>
{{!-- Body --}}
<div class="container-fluid m-0 py-3 px-2 fillHeight bg-white rounded">
  {{!-- Header --}}
  <div class="d-flex mb-2">
    <h3>Auswertung</h3>
    <div class="btn-group ml-auto shadow-none">
      <button  class="btn btn-outline-secondary active shadow-none" id="activeProject" onclick="changeTable('project')">Projekte</button> 
      <button  class="btn btn-outline-secondary shadow-none" id="activeCustomer" onclick="changeTable('customer')">Kunden</button>
      <button  class="btn btn-outline-secondary shadow-none" id="activeEmployee" onclick="changeTable('employee')">Mitarbeiter</button>
    </div>
  </div>


  {{!-- Tablearea Project --}}
  <div class="table-responsive" id="projectsTable">
    <table class="table table-sm table-fixed">
      {{!-- Tablehead --}}
      <thead>
        <tr>
            <th scope="col" class="col-3">Projektname</th> 
            <th scope="col" class="col-4">Kunde</th>
            <th scope="col" class="col-1">Stundensatz</th>
            <th scope="col" class="col-1">Fahrtzeit</th>
            <th scope="col" class="col-1">Arbeitszeit</th>
            <th scope="col" class="col-1">Gesamtzeit</th>
            <th scope="col" class="col-1">Gesamtkosten</th>
        </tr>
      </thead>
    
    {{!-- Tablebody --}}
      <tbody data-simplebar> 
        {{#each projCust}} 
          <tr class="d-flex">
            <td class="col-3 d-flex align-content-stretch">{{name}}</td>
            <td class="col-4 d-flex align-content-stretch">{{companyFix company}} {{surname}} {{firstname}} </td>
            <td class="col-1 d-flex align-content-stretch">{{moneyFix hourly_euro}}€</td>
            <td class="col-1 d-flex align-content-stretch">{{eval_projects_time id ../timelogs "Fahrtzeit"}}</td>
            <td class="col-1 d-flex align-content-stretch">{{eval_projects_time id ../timelogs "Arbeitszeit"}}</td>
            <td class="col-1 d-flex align-content-stretch">{{eval_projects_time id ../timelogs "all"}}</td>
            <td class="col-1 d-flex align-content-stretch">{{eval_projects_money id hourly_euro ../timelogs}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  {{!-- Tablearea customers --}}
  <div class="table-responsive" id="customersTable" style="display: none;">
    <table class="table table-sm table-fixed">
      {{!-- Tablehead --}}
      <thead>
        <tr>
            <th scope="col" class="col-3">Firma</th>
            <th scope="col" class="col-2">Nachname</th>
            <th scope="col" class="col-4">Vorname</th> 
            <th scope="col" class="col-1">Projekte</th>
           <th scope="col" class="col-1">Gesamtzeit</th>
           <th scope="col" class="col-1">Gesamtkosten</th>
        </tr>
      </thead>
    
    {{!-- Tablebody --}}
      <tbody data-simplebar> 
        {{#each customers}}
          <tr class="d-flex">
            <td class="col-3 d-flex align-content-stretch">{{textFix company}}</td>
            <td class="col-2 d-flex align-content-stretch">{{surname}}</td>
            <td class="col-4 d-flex align-content-stretch">{{firstname}}</td>
            <td class="col-1 d-flex align-content-stretch">{{count_projects_customer id ../projects}}</td>
            <td class="col-1 d-flex align-content-stretch">{{eval_customer_time id ../timelogs ../projects}}</td>
            <td class="col-2 d-flex align-content-stretch">{{eval_customer_money id ../projects ../timelogs}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>


  {{!-- Tablearea employees --}}
  <div class="table-responsive" id="employeesTable" style="display: none;">
    <table class="table table-sm table-fixed" id="datatable">
      {{!-- Tablehead --}}
      <thead>
        <tr>
          <th scope="col" class="col-2">Nachname</th>
          <th scope="col" class="col-4">Vorname</th> 
          <th scope="col" class="col-1">Stundenlohn</th>
          <th scope="col" class="col-1">Projekte</th>  
          <th scope="col" class="col-1">Fahrtzeit</th>
          <th scope="col" class="col-1">Arbeitszeit</th>
          <th scope="col" class="col-1">Gesamtzeit</th>
          <th scope="col" class="col-1">Lohnkosten</th>
        </tr>
      </thead>
    
    {{!-- Tablebody --}}
      <tbody data-simplebar> 
        {{#each employees}}
          <tr class="d-flex">
            <td class="col-2 d-flex align-content-stretch">{{surname}}</td>
            <td class="col-4 d-flex align-content-stretch">{{firstname}}</td>
            <td class="col-1 d-flex align-content-stretch">{{moneyFix salary}}€</td>
            <td class="col-1 d-flex align-content-stretch">{{count_employee_projects id ../timelogs ../projects}}</td>
            <td class="col-1 d-flex align-content-stretch">{{eval_employee_time id ../timelogs "Fahrtzeit"}}</td>
            <td class="col-1 d-flex align-content-stretch">{{eval_employee_time id ../timelogs "Arbeitszeit"}}</td>
            <td class="col-1 d-flex align-content-stretch">{{eval_employee_time id ../timelogs "all"}}</td>
            <td class="col-1 d-flex align-content-stretch">{{eval_employee_money id salary ../timelogs}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</div>


{{#section 'script'}}
<script>
  function changeTable(table){
    if(table == 'project'){
      document.getElementById('projectsTable').style.display = 'block';
      document.getElementById('customersTable').style.display = 'none';
      document.getElementById('employeesTable').style.display = 'none';
      document.getElementById('activeProject').className = 'btn btn-outline-secondary active';
      document.getElementById('activeCustomer').className = 'btn btn-outline-secondary';
      document.getElementById('activeEmployee').className = 'btn btn-outline-secondary';
    }
    if(table == 'customer'){
      document.getElementById('projectsTable').style.display = 'none';
      document.getElementById('customersTable').style.display = 'block';
      document.getElementById('employeesTable').style.display = 'none';
      document.getElementById('activeProject').className = 'btn btn-outline-secondary';
      document.getElementById('activeCustomer').className = 'btn btn-outline-secondary active';
      document.getElementById('activeEmployee').className = 'btn btn-outline-secondary';
    }
    if(table == 'employee'){
      document.getElementById('projectsTable').style.display = 'none';
      document.getElementById('customersTable').style.display = 'none';
      document.getElementById('employeesTable').style.display = 'block';
      document.getElementById('activeProject').className = 'btn btn-outline-secondary';
      document.getElementById('activeCustomer').className = 'btn btn-outline-secondary';
      document.getElementById('activeEmployee').className = 'btn btn-outline-secondary active';
    }
  }
</script>
{{/section}}